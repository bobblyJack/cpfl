{
	"version": "2.0.0",
	"tasks": [
		// build group
		{
			"label": "Build",
			"detail": "Default Build Task",
			"type": "shell",
			"command": "node tasks/build.js",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"showReuseMessage": false
			}
		},
		// test group
		{
			"label": "Ignition",
			"dependsOn": [
				"Build"
			],
			"type": "shell",
			"command": "npx",
			"args": [
				"office-addin-debugging",
				"start", "dist/manifest.xml",
				"desktop",
				"--app", "word"
			],
			"detail": "Sideload Office Add-In for Debugging",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": false,
				"showReuseMessage": false
			}
		},
		{
			"label": "Landing",
			"type": "npm",
			"script": "sideload-stop",
			"detail": "Stops Debugging",
			"group": "test",
			"presentation": {
				"echo": false,
				"showReuseMessage": false
			}
		}
	]
}