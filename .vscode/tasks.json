{
	"version": "2.0.0",
	"tasks": [
		// build group
		{
			"label": "Build",
			"detail": "Default Build Task",
			"dependsOn": [
				"Clean",
				"Compile",
				"Convert",
				"Copy"
			],
			"dependsOrder": "sequence",
			"type": "shell",
			"command": "echo 'build complete'",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"showReuseMessage": false,
				"group": "${defaultBuildTask}"
			}
		},
		{
			"label": "Clean",
			"detail": "Empty Build Directories",
			"type": "shell",
			"command": "tasks/clean.ps1",
			"group": "build",
			"presentation": {
				"echo": false,
				"clear": true,
				"reveal": "silent",
				"showReuseMessage": false,
				"group": "${defaultBuildTask}"
			}
		},
		{
			"label": "Compile",
			"detail": "Build Typescript Library",
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"group": "build",
			"problemMatcher": "$tsc",
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"showReuseMessage": false,
				"group": "${defaultBuildTask}"
			}
		},
		{
			"label": "Convert",
			"detail": "Build XML Manifest",
			"type": "shell",
			"command": "node lib/manifest.js",
			"group": "build",
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"showReuseMessage": false,
				"group": "${defaultBuildTask}"
			}
		},
		{
			"label": "Copy",
			"detail": "Transfer Distribution Assets",
			"type": "shell",
			"command": "node tasks/build.js",
			"group": "build",
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"showReuseMessage": false,
				"group": "${defaultBuildTask}"
			}
		},
		// test group
		{
			"label": "Ignition",
			"dependsOn": "${defaultBuildTask}",
			"dependsOrder": "sequence",
			"type": "shell",
			"command": "npx",
			"args": [
				"office-addin-debugging",
				"start", "dist/manifest.xml",
				"desktop",
				"--app", "word"
			],
			"detail": "Sideload Office Add-In for Debugging",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": false,
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": false
			}
		},
		{
			"label": "Landing",
			"type": "npm",
			"script": "sideload-stop",
			"detail": "Stops Debugging",
			"group": "test",
			"presentation": {
				"showReuseMessage": false,
				"close": true
			}
		}
	]
}