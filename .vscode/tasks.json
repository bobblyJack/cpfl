{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"detail": "Build: Dev Mode",
			"type": "shell",
			"command": "npx",
			"args": [
				"webpack",
				"--mode", "development"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"presentation": {
				"showReuseMessage": false,
				"close": true
			}
		},
		{
			"label": "Ignition",
			"detail": "Sideload: Desktop",
			"type": "shell",
			"command": "npx",
			"args": [
				"office-addin-debugging",
				"start", "dist/manifest.xml",
				"desktop",
				"--app", "word"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": [],
			"presentation": {
				"showReuseMessage": false,
				"close": true
			}
		},
		{
			"label": "Landing",
			"detail": "Stop Debug",
			"type": "shell",
			"command": "npx",
			"args": [
				"office-addin-debugging",
				"stop", "dist/manifest.xml"
			],
			"group": "test",
			"problemMatcher": [],
			"presentation": {
				"showReuseMessage": false,
				"close": true
			}
		}
	]
}