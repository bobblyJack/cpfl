{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "ES6",
      "DOM"
    ],
    "strict": true,
    "allowJs": true,
    "noEmitOnError": true,
    "removeComments": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist/"
  },
  "include": [
    "./src/**/*"
  ]
}