{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "DOM"
    ],
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": false,
    "outDir": "./lib/"
  },
  "include": [
    "./src/**/*"
  ]
}